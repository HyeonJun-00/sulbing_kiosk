html
    head
        title 설빙 - 관리자 페이지
        script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.4/jquery.js'
        integrity='sha512-6DC1eE3AWg1bgitkoaRM1lhY98PxbMIbhgYCGV107aZlyzzvaWCW1nJW2vDuYQm06hXrW0As6OGKcIaAVWnHJw=='
        crossorigin='anonymous')
        script(src="https://kit.fontawesome.com/90abd907ab.js" crossorigin="anonymous")
        link(rel="preconnect" href="https://fonts.googleapis.com")
        link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
        link(href="https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@700&display=swap" rel="stylesheet")
        link(rel="stylesheet", href="./css/admin.css")
    body
        main.mainDisplay
            ul.mainMenu
                li
                    a( href="/admin_order" )
                        img.logo(src="./images/sulbingLogo.png", alt="설빙로고", title="설빙로고")
                li
                    a( href="/admin_order" ) 주문현황
                li
                    a( href="/admin_product" ) 상품관리
                li
                    a( href="/admin_sales" ) 매출
                li
                    a( href="/admin_menu" ) 메뉴관리
                li
                    a( href="/admin_user" ) 회원관리
            section.adminPage
                section.headFrame
                    h1 매출
                section.mainContent
                    section.searchBox
                        input(class="tapBtn" id="dailySale" type="button" value="일매출")
                        input(class="tapBtn" id="monthlySale" type="button" value="월매출")
                        input(class="tapBtn" id="yearlySale" type="button" value="연매출")
                        input(class="tapBtn" id="bestMenu" type="button" value="인기메뉴")
                        //form#searchForm
                            label tel
                            input.searchInput#searchTel( type="text", name="tel" )
                            button
                                i.xi-search
                            i.xi-refresh( onclick="location.reload();" )
                    section.displayMonthlySale
                        for saleMonths, index in saleMonth
                            .dataGraph
                                .dataValue(id=`dataVal${index}` data-price=`${saleMonths.totalPrice}`)
                                    span.nameTag #{saleMonths.date}월<br>#{saleMonths.totalPriceComma}
                    section.displayDailySale
                        for saleDays, index in saleDay
                            .dataGraph
                                .dayValue(id=`dataVal${index}` data-price=`${saleDays.totalPrice}`)
                                    span.nameTag #{saleDays.date}일<br>#{saleDays.totalPriceComma}
                    section.displayYearlySale
                        for saleLastYears, index in saleLastYear
                            .dataGraph
                                .lastYearValue(id=`dataVal${index}` data-price=`${saleLastYears.totalPrice}`)
                                    span.nameTag #{saleLastYears.date}년<br>#{saleLastYears.totalPriceComma}
                        for saleYears, index in saleYear
                            .dataGraph
                                .yearValue(id=`dataVal${index}` data-price=`${saleYears.totalPrice}`)
                                    span.nameTag #{saleYears.date}년<br>#{saleYears.totalPriceComma}
                    section.displayBestSales
                        for bestItems, index in bestItem
                            .dataGraph
                                .itemValue(id=`dataVal${index}` data-price=`${bestItems.purchaseCnt}`)
                                    span.nameTag #{bestItems.name}(#{bestItems.purchaseCnt})
                    .axisInfo
                        .axis
                            span 100%
                        .axis
                            span 75%
                        .axis
                            span 50%
                        .axis
                            span 25%
                        .axis
                            span 0%
                    //section.postTable
                        ul.salesRowSet
                            li
                                ul.salesColSet
                    section.tablePaging
                        //- let pageCnt= ( ( userTotCnt[0].cnt / 10 ) < 1 )? 1 : ( userTotCnt[0].cnt / 10 ) - 1;
                        //- for( let i= 0; i < pageCnt; i++ )
                        //a( data-page-idx=`${i}`, data-page=`${i == nowPage}` )= i + 1
                    section.modalConfirmBak#modalConfirmBak
                        section.modalConfirm
                            p 수정하시겠습니까
                            .modalBtnSet
                                button.modalBtn( data-modal-confirm=true ) YES
                                button.modalBtn( data-modal-confirm=false ) CANCEL
                section.footer
        script(src="./js/adminSale.js")
